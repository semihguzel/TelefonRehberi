
@{
    ViewBag.Title = "CalisanEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Calisan Ekle</h2>

<div class="panel panel-default">
    <div class="panel-body">
        @using (Html.BeginForm("CalisanEkle", "Calisan", FormMethod.Post))
        {
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>İsim: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" required name="name" placeholder="İsim Giriniz..." class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Soyisim: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" required name="surname" placeholder="Soyisim Giriniz..." class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Telefon: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" required name="telephone" placeholder="Telefonunuzu Giriniz..." class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-10 col-md-offset-2">
                        <input type="submit" value="Kaydet" class="form-control btn btn-success" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>



@model TelefonRehberi.DATA.Entities.Yonetici
@{
    ViewBag.Title = "YoneticiGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Yonetici Guncelle</h2>


<div class="panel panel-default">
    <div class="panel-body">
        @using (Html.BeginForm("YoneticiGuncelle", "Yonetici", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.YoneticiID);

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Kullanıcı Adı: </label>
                    </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", @placeholder = "Kullanıcı Adınızı giriniz...", @required = "required" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Şifre: </label>
                    </div>
                    <div class="col-md-10">
                        @Html.PasswordFor(x => x.Sifre, new { @class = "form-control", @placeholder = "Şifrenizi giriniz...", @required = "required" })
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <div class="col-md-10 col-md-offset-2">
                        <input type="submit" value="Güncelle" class="form-control btn btn-success" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <a href="@Url.Action("Index","Yonetici")" style="float:left; width:150%" class="btn btn-info">Yönetici Sayfasına Dön</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


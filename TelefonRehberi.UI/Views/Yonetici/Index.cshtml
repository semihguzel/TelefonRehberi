
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Calisan Listesi</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Calisan Adi</th>
                    <th>Calisan Soyadi</th>
                    <th>Calisan Telefonu</th>
                    <th>Calisan Islemleri</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td><a href="@Url.Action("CalisanDetay","Calisan",item.CalisanID)">@item.CalisanAdi</a></td>
                            <td>@item.CalisanSoyadi</td>
                            <td>@item.Telefon</td>
                            <td>
                                <a href="@Url.Action("CalisanDuzenle","Calisan",item.CalisanID)" class="btn btn-info">Duzenle</a>
                                <a href="@Url.Action("CalisanSil","Calisan",item.CalisanID)" class="btn btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <a style="float:right" href="@Url.Action("CalisanEkle","Calisan")" class="btn btn-success">Calisan Ekle</a>
    </div>
</div>




@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_Layout</title>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">Telefon Rehberi</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" style="float:right" href="#">Admin Girişi <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="row">
            @{
                if (Session["KullaniciAdi"] == null)
                {
                    @RenderBody()
                }
                else
                {
                    <div class="col-md-3">
                        @* TODO : _AdminPartial içerisindeki linkler verilecek *@
                        @Html.Partial("_AdminPartial")
                    </div>
                    <div class="col-md-9">
                        @RenderBody()
                    </div>
                }
            }
        </div>
    </div>
</body>
</html>
